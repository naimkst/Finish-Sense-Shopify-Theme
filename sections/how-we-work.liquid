<div class="how-work-section p-100">
  <div class="container">
    <div class="row">
      <div class="how-work-flex col-lg-6 col-12">
        <div class="work-left-section">
          <div class="work-left-image wow fadeInLeft" data-wow-duration="600ms">
            <img
              src="{{ section.settings.left_image |  image_url: width: 600  }}"
              alt=""
              width=""
              height="">
            <div class="count-experience wow fadeInUp" data-wow-duration="700ms">
              <h2>{{ section.settings.expericent_time }}</h2>
              <p>{{ section.settings.expericent_text }}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="how-work-flex col-lg-6 col-12 align-self-center">
        <div class="work-right-content">
          <span class="wow fadeInUp" data-wow-duration="600ms">{{ section.settings.how_we_work_slug }}</span>
          <h2 class="wow fadeInUp" data-wow-duration="700ms">{{ section.settings.how_we_work_title }}</h2>
          <p class="content 
            wow
            fadeInUp" data-wow-duration="
            700ms">
            {{ section.settings.how_we_work_content }}
          </p>
          <div class="work-process">
            {% for block in section.blocks %}
              <div class="process-item wow
            fadeInUp" data-wow-duration="
            {{ forloop.index |  plus: 5 }}00ms">
                <div>
                  <span>{{ block.settings.process_number }}</span>
                </div>
                <div class="process-content">
                  <h3>{{ block.settings.title }}</h3>
                  <p class="content">
                    {{ block.settings.content }}
                  </p>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "How We Work Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "left_image",
        "label": "Left Image"
      },
      {
        "type": "text",
        "id": "expericent_time",
        "label": "Experience Time",
        "default": "25+"
      },
      {
        "type": "text",
        "id": "expericent_text",
        "label": "Experience Text",
        "default": "Year of Experience"
      },
      {
        "type": "text",
        "id": "how_we_work_slug",
        "label": "How We Work",
        "default": "HOW WE WORK"
      },
      {
        "type": "text",
        "id": "how_we_work_title",
        "label": "Title",
        "default": "Bringing Out the Potential in You"
      },
      {
        "type": "text",
        "id": "how_we_work_content",
        "label": "Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quis ipsum suspendisse ultrices gravida. Risus commodo viverra maecenas accumsan lacus vel facilisis."
      }
    ],
    "blocks": [
      {
        "name": "Add Process",
        "type": "block",
        "settings": [
          {
            "type": "text",
            "id": "process_number",
            "label": "Process Number",
            "default": "01"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Apply for the Jobs"
          },
          {
            "type": "text",
            "id": "content",
            "label": "Content",
            "default": "Integer pharetra lectus eget dui porttitor mattis. Etiam ut ante vestibulum nisl hendrerit gravida."
          }

        ]
      }
    ],
    "presets": [
      {
        "name": "How We Work Section",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}