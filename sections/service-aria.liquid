<!-- start of service-area -->
<div class="service-area section-padding pt-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-12">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
          <p>{{ section.settings.section_description }}</p>
        </div>
      </div>
    </div>
    <div class="service-wrap">
      <div class="row align-items-center">
        {% for block in section.blocks %}
          <div class="col col-lg-6 col-md-6 col-12">
            <div class="service-item wow fadeInUp" data-wow-duration="1000ms">
              <div class="service-img">
                <img
                  src="{{ block.settings.background_image | image_url: width: 700 }}"
                  alt=""
                  width="100%"
                  height="100%">
                <div class="service-text">
                  <h2>{{ block.settings.title }}</h2>
                  <a href="{{ block.settings.button_Link }}" class="read-more">{{ block.settings.button_text }}</a>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<!-- end of service-area -->


{% schema %}
  {
    "name": "Service Section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "What We Do"
      },
      {
        "type": "text",
        "id": "section_description",
        "label": "Section Description",
        "default": "Best Exhibition Stall Designers in India, Europe and Poland"
      }
    ],
    "blocks": [
      {
        "name": "Add Item",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "background_image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Engineering & Design"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Learn More"
          },
          {
            "type": "url",
            "id": "button_Link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Service Section",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}