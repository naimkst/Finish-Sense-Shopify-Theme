<!-- start blog-area -->
<section class="blog-area section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-12">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
          <p>{{ section.settings.section_description }}</p>
        </div>
      </div>
    </div>
    <div class="blog-items">
      <div class="blog-active owl-carousel">
        {%- for article in blogs.news.articles -%}
          <div class="blog-item wow fadeInUp" data-wow-duration="1000ms">
            <div class="blog-img-left">
              <div class="blog-img">
                <img
                  src="{{ article.image | image_url: width: 400 }}"
                  width="100%"
                  height="100%"
                  alt="">
              </div>
            </div>
            <div class="blog-content">
              <h2>
                <span>{{ article.published_at | date: "%d" }}<small>{{ article.published_at | date: "%b" }}</small>
                </span>
                {{ article.title | strip_html | truncate: 52, '..' }}</h2>
              <p>{{ article.content | strip_html | truncate: 132, '..' }}</p>
              <a href="{{ article.url }}" class="read-more">Learn More</a>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
<!-- end container -->
</section>
<!-- end blog-area -->


{% schema %}
  {
    "name": "Blog Section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Latest Blogs"
      },
      {
        "type": "text",
        "id": "section_description",
        "label": "Section Description",
        "default": "Our latest Blogs/News"
      }
    ],
    "presets": [
      {
        "name": "Blog Section"
      }
    ]
  }
{% endschema %}