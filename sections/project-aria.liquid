<!-- start of project-area -->
<div class="project-area section-padding pt-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-12">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
          <p>{{ section.settings.section_description }}</p>
        </div>
      </div>
    </div>
    <div class="project-wrap">
      <div class="project-active owl-carousel">
        {% for block in section.blocks %}
          <div class="project-item wow fadeInUp" data-wow-duration="{{ forloop.index0 |  plus: 1 }}000ms">
            <div class="project-img">
              <img
                src="{{ block.settings.background_image |  image_url: width: 600  }}"
                alt=""
                width="100%"
                height="100%">
              <div class="project-text">
                <h2>{{ block.settings.title }}</h2>
                {{ block.settings.description }}
                <a href="{{ block.settings.button_Link }}" class="read-more">{{ block.settings.button_text }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<!-- end of project-area -->


{% schema %}
  {
    "name": "Project Section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Our Work"
      },
      {
        "type": "text",
        "id": "section_description",
        "label": "Section Description",
        "default": "We are specialists in multi-use, sustainable exhibition stands and event environments."
      }
    ],
    "blocks": [
      {
        "name": "Add Item",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "background_image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Engineering & Design"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Exhibition:  Dusseldorf, Germany </p>"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Learn More"
          },
          {
            "type": "url",
            "id": "button_Link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Project Section",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}