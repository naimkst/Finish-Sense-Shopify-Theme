<div class="blog-hero-section" >
  <img
    src="{{ article.image.src | img_url: 'large' }}"
    alt="{{ article.title }}"
    width=""
    height="">
</div>
<div class="blog-area p-100">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-12">
        <div class="section-title text-start">
          <h2 class="text-start blog-title wow fadeInUp" data-wow-duration="600ms">{{ article.title }}</h2>
          <div class="blog-author wow fadeInUp" data-wow-duration="800ms">
            <div class="author-img">
              <img
                src="{{ article.user.image.src | image_url: width: 200  }}"
                alt=""
                width=""
                height="">
            </div>
            <div class="author-info wow fadeInUp" data-wow-duration="900ms">
              <p>{{ article.author }}</p>
              <script>
                console.log({{ article.user.image | json }}, "=====")
              </script>
              <span class="wow fadeInUp" data-wow-duration="1000ms">
                |
              </span>
              <span class="wow fadeInUp" data-wow-duration="1100ms">{{ article.published_at | date: "%d %b %Y" }}</span>
            </div>
          </div>
          <div class="blog-content wow fadeInUp" data-wow-duration="1200ms">
            {{ article.content }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>