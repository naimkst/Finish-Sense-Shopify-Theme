<div class="blog-hero-section">
  <img
    src="{{ article.image.src | img_url: 'large' }}"
    alt="{{ article.title }}"
    width=""
    height="">
</div>
<div class="blog-area p-100">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-12">
        <div class="section-title text-start">
          <h2 class="text-start blog-title">{{ article.title }}</h2>
          <div class="blog-author">
            <div class="author-img">
              <img
                src="{{ article.user.image.src | image_url: width: 200  }}"
                alt=""
                width=""
                height="">
            </div>
            <div class="author-info">
              <p>{{ article.author }}</p>
              <script>
                console.log({{ article.user.image | json }}, "=====")
              </script>
              <span>
                |
              </span>
              <span>{{ article.published_at | date: "%d %b %Y" }}</span>
            </div>
          </div>
          <div class="blog-content">
            {{ article.content }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>